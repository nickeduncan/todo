<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table class= 'table-striped'>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr class="<%= todo_item.id.even? ? 'danger' : '' %>">
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class: 'btn btn-info btn-large' %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><i class="fa fa-times-circle" aria-hidden="true"></i><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-large' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Item', new_todo_item_path %>

<a href="#" class='btn btn-large'></a>
